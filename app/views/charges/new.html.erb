<%= form_tag charges_path do %>
  <h4>You can upgrade or downgrade your account using the selections below.</h4>
  <script class='stripe-button' src="https://checkout.stripe.com/checkout.js" data-key="<%= @stripe_btn_data[:key] %>" data-amount="<%= @stripe_btn_data[:amount] %>" data-description="<%= @stripe_btn_data[:description] %>" ></script>
  <%= link_to "Downgrade Account", @charge, method: :delete, class: 'btn btn-danger', data: {confirm: "We hate to see you go! Please confirm you want to downgrade."} %>
<% end %>